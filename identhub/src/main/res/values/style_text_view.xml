<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Headlines -->

    <style name="TextView.HeadLine1">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextView.HeadLine2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.HeadLine3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.HeadLine4">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- small -->

    <style name="TextView.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- tiny -->

    <style name="TextView.Tiny">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextView.Tiny.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <!-- error message -->
    <style name="TextView.Tiny.Error">
        <item name="android:textColor">@color/error</item>
    </style>
</resources>