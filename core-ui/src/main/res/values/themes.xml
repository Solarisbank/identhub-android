<resources>
    <!-- Base application theme. -->
    <style name="IdentHubBaseTheme" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ident_hub_color_primary</item>
        <item name="color">@color/ident_hub_color_primaryVariant</item>
        <item name="colorControlNormal">@color/ident_hub_color_onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ident_hub_color_secondary</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheet</item>
        <item name="actionBarStyle">@style/actionBarStyle</item>
        <item name="stepIndicatorStyle">@style/StepIndicatorStyleCommon</item>
    </style>

    <style name="IdentHubTheme" parent="@style/IdentHubBaseTheme">
        <item name="startImageTextViewStyle">@style/defaultStartImageTextViewStyle</item>
    </style>
</resources>