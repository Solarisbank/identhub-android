<resources>
    <!-- Base application theme. -->
    <style name="IdentHubBaseTheme" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ident_hub_color_primary</item>
        <item name="color">@color/ident_hub_color_primaryVariant</item>
        <item name="colorControlNormal">@color/ident_hub_color_onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ident_hub_color_secondary</item>
        <item name="bottomSheetDialogTheme">@style/IdentHubBottomSheet</item>
        <item name="actionBarStyle">@style/IdentHubActionBarStyle</item>
        <item name="IdentHubStepIndicatorStyle">@style/IdentHubStepIndicatorStyleCommon</item>
    </style>

    <style name="IdentHubTheme" parent="@style/IdentHubBaseTheme">
        <item name="IdentHubStartImageTextViewStyle">@style/IdentHubDefaultStartImageTextViewStyle</item>
    </style>
</resources>