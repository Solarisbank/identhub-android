<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IdentHubTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/ident_hub_color_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="IdentHubTextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Headlines -->

    <style name="IdentHubTextView.HeadLine1" parent="IdentHubTextView">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="IdentHubTextView.HeadLine24" parent="IdentHubTextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="IdentHubTextView.HeadLine2" parent="IdentHubTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IdentHubTextView.HeadLine3" parent="IdentHubTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IdentHubTextView.HeadLine15" parent="IdentHubTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IdentHubTextView.HeadLine4">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IdentHubTextView.Headline" parent="IdentHubTextView">
        <item name="fontWeight">600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IdentHubTextView.Regular" parent="IdentHubTextView">
        <item name="fontWeight">400</item>
    </style>

    <style name="IdentHubColoredTextView" parent="IdentHubTextView">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="IdentHubColoredTextView.Green">
        <item name="android:textColor">@color/ident_hub_color_dark_green</item>
    </style>

    <!-- small -->

    <style name="IdentHubTextView.Small_24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="IdentHubTextView.Small_16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IdentHubTextView.Small_15">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="IdentHubTextView.Small_14" parent="IdentHubTextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="IdentHubTextView.Small_13" parent="IdentHubTextView">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="IdentHubTextView.Small_12" parent="IdentHubTextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="IdentHubTextView.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="IdentHubTextView.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- tiny -->

    <style name="IdentHubTextView.Tiny">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="IdentHubTextView.Tiny.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <!-- error message -->
    <style name="IdentHubTextView.Tiny.Error">
        <item name="android:textColor">@color/ident_hub_color_error</item>
    </style>

    <style name="IdentHubTextView.Info">
        <item name="android:textColor">@color/ident_hub_color_info_text</item>
    </style>

    <style name="CurrentStepLabelCommon" parent="IdentHubTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NextStepLabelCommon" parent="IdentHubTextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>