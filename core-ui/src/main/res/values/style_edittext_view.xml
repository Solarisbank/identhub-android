<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IdentHubTextBox" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/textbox_drawable_selector</item>
        <item name="android:textColor">@color/edittext_color_selector</item>
    </style>

    <style name="IdentHubTextBoxSingle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_level_list_drawable</item>
        <item name="android:textColor">@color/edittext_color_selector</item>
        <item name="android:maxLength">6</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:letterSpacing">.2</item>
    </style>

    <style name="IdentHubEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_level_list_drawable</item>
        <item name="android:textColor">@color/edittext_color_selector</item>
    </style>

</resources>