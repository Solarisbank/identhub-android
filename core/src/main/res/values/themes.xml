<resources>
    <!-- Base application theme. -->
    <style name="IdentHubBaseTheme" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/identhub_color_primary</item>
        <item name="color">@color/identhub_color_primaryVariant</item>
        <item name="colorControlNormal">@color/identhub_color_onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/identhub_color_secondary</item>
        <item name="bottomSheetDialogTheme">@style/IdentHubBottomSheet</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Default text view style -->
        <item name="android:textViewStyle">@style/IdentHubTextView</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>