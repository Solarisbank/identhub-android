<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IdentHubPrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/identhub_button_textcolor_selector</item>
        <item name="android:background">@drawable/identhub_button_primary_background</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@fontFamily/roboto_medium</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="IdentHubAlternativeButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/identhub_color_edit_text</item>
        <item name="android:background">@drawable/identhub_button_alternative_background</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@fontFamily/roboto_medium</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="IdentHubSecondaryNoBackgroundButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/identhub_color_secondary</item>
        <item name="android:background">@drawable/identhub_button_alternative_background</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@fontFamily/roboto_medium</item>
    </style>

    <style name="IdentHubDialogButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/identhub_button_dialog_background</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
