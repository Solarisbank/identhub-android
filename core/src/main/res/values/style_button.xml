<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IdentHubPrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/ident_hub_color_onPrimary</item>
        <item name="backgroundTint">@color/button_background_primary_selector</item>
        <item name="rippleColor">@color/ident_hub_color_primaryVariant</item>
        <item name="iconTint">@color/ident_hub_color_onPrimary</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="IdentHubLightButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_text_light_selector</item>
        <item name="backgroundTint">@color/button_background_light_selector</item>
        <item name="rippleColor">@color/ident_hub_color_black10</item>
        <item name="iconTint">@color/ident_hub_color_onPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="IdentHubTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textbutton_color_selector</item>
        <item name="rippleColor">@color/ident_hub_color_black10</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="IdentHubIconOnly" parent="Widget.AppCompat.Button">
        <item name="iconPadding">0dp</item>
        <item name="backgroundTint">@color/button_background_light_selector</item>
        <item name="rippleColor">@color/ident_hub_color_black10</item>
        <item name="iconTint">@color/ident_hub_color_black</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
    </style>
</resources>