<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="backgroundTint">@color/button_background_primary_selector</item>
        <item name="rippleColor">@color/primaryVariant</item>
        <item name="iconTint">@color/onPrimary</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="LightButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text_light_selector</item>
        <item name="backgroundTint">@color/button_background_light_selector</item>
        <item name="rippleColor">@color/black10</item>
        <item name="iconTint">@color/onPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textbutton_color_selector</item>
        <item name="rippleColor">@color/black10</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="backgroundTint">@color/button_background_light_selector</item>
        <item name="rippleColor">@color/black10</item>
        <item name="iconTint">@color/black</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
    </style>
</resources>