<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IdentHubTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/identhub_color_text</item>
        <item name="android:textSize">@dimen/identhub_paragraph_text_size</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="IdentHubTextView.TopHeaderTitle" parent="IdentHubTextView">
        <item name="android:textSize">@dimen/identhub_top_header_title_size</item>
        <item name="android:textColor">@color/identhub_header_text_color</item>
    </style>

    <style name="IdentHubTextView.ParagraphText" parent="IdentHubTextView">
        <item name="android:textSize">@dimen/identhub_paragraph_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/identhub_paragraph_text_color</item>
    </style>

    <style name="IdentHubTextView.SubParagraphText" parent="IdentHubTextView">
        <item name="android:textSize">@dimen/identhub_sub_paragraph_text_size</item>
        <item name="android:textColor">@color/identhub_sub_paragraph_text_color</item>
    </style>

    <style name="IdentHubTextView.ImportantTextLabel">
        <item name="android:textSize">@dimen/identhub_important_label_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IdentHubTextView.InputLabel" parent="IdentHubTextView">
        <item name="android:textColor">@color/identhub_color_label_text</item>
        <item name="android:textSize">@dimen/identhub_paragraph_text_size</item>
    </style>

    <style name="IdentHubTextView.InputBottomLabel">
        <item name="android:textSize">@dimen/identhub_input_bottom_label_size</item>
    </style>

</resources>