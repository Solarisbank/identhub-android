<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IdentHubTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/ident_hub_color_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="IdentHubTextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Headlines -->

    <style name="IdentHubTextView.HeadLine1">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="IdentHubTextView.HeadLine2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IdentHubTextView.HeadLine3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IdentHubTextView.HeadLine4">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- small -->

    <style name="IdentHubTextView.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="IdentHubTextView.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- tiny -->

    <style name="IdentHubTextView.Tiny">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="IdentHubTextView.Tiny.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <!-- error message -->
    <style name="IdentHubTextView.Tiny.Error">
        <item name="android:textColor">@color/ident_hub_color_error</item>
    </style>
</resources>