<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/identhub_dialog_padding"
        android:layout_marginBottom="@dimen/identhub_margin_16">

        <TextView
            style="@style/IdentHubTextView.TopHeaderTitle"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="This is the title"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/identhub_sub_paragraph_margin"
            tools:text="This should be lorem ipsum or something but it's not. Deal with it. Ain't nothing you can do about it. Except of course chaning this text... Wait..."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/identhub_default_button_height"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/identhub_bottom_footer_margin">

            <Button
                android:id="@+id/positiveButton"
                style="@style/IdentHubDialogButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/identhub_default_button_height"
                android:layout_weight="1" />

            <View
                android:id="@+id/buttomSeparator"
                android:layout_width="1dp"
                android:layout_height="@dimen/identhub_margin_16"
                android:background="@color/identhub_color_separator"/>

            <Button
                android:id="@+id/negativeButton"
                style="@style/IdentHubDialogButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/identhub_default_button_height"
                android:layout_weight="1"
                android:textColor="@color/identhub_color_primary" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>