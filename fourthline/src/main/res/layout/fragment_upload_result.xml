<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="40dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp"/>

    <ImageView
        android:id="@+id/resultImageView"
        android:layout_width="0dp"
        android:layout_height="126dp"
        app:layout_constraintEnd_toEndOf="@+id/endGuideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/startGuideline"
        app:layout_constraintTop_toBottomOf="@+id/topGuideline"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/subtitle1"
        style="@style/IdentHubTextView.Regular"
        android:gravity="center_horizontal"
        android:maxLines="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/startGuideline"
        app:layout_constraintEnd_toEndOf="@+id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/resultImageView"
        app:layout_constraintBottom_toTopOf="@id/indicator"
        android:text="@string/kyc_upload_success_title"
        app:layout_constraintVertical_bias="0.1"
        />

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="47.2dp"
        android:layout_height="47.2dp"
        android:src="@drawable/ic_done_round_blue"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@+id/startGuideline"
        app:layout_constraintEnd_toEndOf="@+id/endGuideline"
        app:layout_constraintTop_toTopOf="@+id/topGuideline"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
        />

    <TextView
        android:id="@+id/subtitle2"
        style="@style/IdentHubTextView.Regular"
        android:layout_width="0dp"
        android:maxLines="4"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/startGuideline"
        app:layout_constraintEnd_toEndOf="@+id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/indicator"
        android:text="@string/kyc_upload_success_subtitle"
        app:layout_constraintVertical_bias="0.1"
        />

    <Button
        android:id="@+id/quitButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_button_height"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        style="@style/IdentHubPrimaryButton"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginBottom="@dimen/margin_16"
        android:text="@string/fourthline_doc_scan_continue_button"
        />
</androidx.constraintlayout.widget.ConstraintLayout>