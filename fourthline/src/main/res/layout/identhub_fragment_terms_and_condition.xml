<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/buttonLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/identhub_margin_24" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/identhub_margin_24" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/topGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="16dp" />

            <TextView
                android:id="@+id/title"
                style="@style/IdentHubTextView.Headline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/identhub_fourthline_terms_verify_title"
                app:layout_constraintStart_toEndOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline"
                app:layout_constraintTop_toBottomOf="@id/topGuideline" />

            <TextView
                android:id="@+id/subtitle"
                style="@style/IdentHubTextView.Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/identhub_margin_24"
                android:text="@string/identhub_fourthline_terms_description_start"
                app:layout_constraintStart_toEndOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintHorizontal_bias="0.0"
                />

            <LinearLayout
                android:id="@+id/condition1Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/identhub_margin_24"
                app:layout_constraintStart_toEndOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline"
                app:layout_constraintTop_toBottomOf="@id/subtitle"
                android:gravity="top"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/condition1ImageView"
                    android:src="@drawable/identhub_ic_perm_group_location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />

                <TextView
                    android:id="@+id/condition1"
                    style="@style/IdentHubTextView.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="@string/identhub_fourthline_terms_description_list_item1"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/condition2Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/identhub_margin_24"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@+id/end_guideline"
                app:layout_constraintTop_toBottomOf="@id/condition1Layout"
                android:gravity="top"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/condition2ImageView"
                    android:src="@drawable/identhub_ic_perm_group_camera"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />

                <TextView
                    android:id="@+id/condition2"
                    style="@style/IdentHubTextView.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="@string/identhub_fourthline_terms_description_list_item2"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/selectAll"
                style="@style/IdentHubTextView.Regular"
                android:layout_marginTop="@dimen/identhub_margin_24"
                app:layout_constraintStart_toEndOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline"
                app:layout_constraintTop_toBottomOf="@id/condition2Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/identhub_fourthline_terms_description_end"
                />

            <de.solarisbank.sdk.feature.view.BulletListLayout
                android:id="@+id/bulletList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline"
                app:layout_constraintTop_toBottomOf="@+id/selectAll"
                android:layout_marginTop="@dimen/identhub_margin_32"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/submitButton"
            style="@style/IdentHubPrimaryButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/identhub_default_button_height"
            android:layout_marginTop="@dimen/identhub_margin_4"
            android:layout_marginBottom="@dimen/identhub_margin_16"
            android:text="@string/identhub_fourthline_terms_button_submit"
            />

    </LinearLayout>
</RelativeLayout>