<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/buttonLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/identhub_layout_margin" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/identhub_layout_margin" />

            <TextView
                android:id="@+id/title"
                style="@style/IdentHubTextView.TopHeaderTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/identhub_fourthline_terms_verify_title"
                app:layout_constraintStart_toEndOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/identhub_top_paragraph_margin"
                android:text="@string/identhub_fourthline_terms_description_start"
                app:layout_constraintStart_toEndOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <LinearLayout
                android:id="@+id/condition1Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/identhub_sub_paragraph_margin"
                app:layout_constraintStart_toEndOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@id/end_guideline"
                app:layout_constraintTop_toBottomOf="@id/subtitle"
                android:gravity="top"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/condition1ImageView"
                    android:src="@drawable/identhub_ic_perm_group_location"
                    android:layout_width="@dimen/identhub_default_drawable_size"
                    android:layout_height="@dimen/identhub_default_drawable_size"
                    />

                <TextView
                    android:id="@+id/condition1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/identhub_drawable_start_margin"
                    android:text="@string/identhub_fourthline_terms_description_list_item1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/condition2Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/identhub_sub_paragraph_margin"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                app:layout_constraintEnd_toEndOf="@+id/end_guideline"
                app:layout_constraintTop_toBottomOf="@id/condition1Layout"
                android:gravity="top"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/condition2ImageView"
                    android:src="@drawable/identhub_ic_perm_group_camera"
                    android:layout_width="@dimen/identhub_default_drawable_size"
                    android:layout_height="@dimen/identhub_default_drawable_size"
                    />

                <TextView
                    android:id="@+id/condition2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/identhub_drawable_start_margin"
                    android:text="@string/identhub_fourthline_terms_description_list_item2"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/namirialTermsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/identhub_terms_and_conditions_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/fourthlinePrivacyDescription"
                app:layout_constraintStart_toStartOf="@id/start_guideline">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/namirialTermsCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/namirialTermsDescription"
                    style="@style/IdentHubTextView.SubParagraphText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/identhub_text_box_label_margin"
                    android:text="@string/identhub_namirial_terms_and_conditions" />

            </LinearLayout>

            <TextView
                android:id="@+id/fourthlinePrivacyDescription"
                style="@style/IdentHubTextView.SubParagraphText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/identhub_bottom_footer_margin"
                android:layout_marginStart="@dimen/identhub_text_box_message_label_margin"
                android:text="@string/identhub_fourthline_privacy_statement"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/start_guideline" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/submitButton"
            style="@style/IdentHubPrimaryButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/identhub_default_button_height"
            android:layout_marginBottom="@dimen/identhub_button_bottom_margin"
            android:text="@string/identhub_fourthline_terms_button_submit" />

    </LinearLayout>
</RelativeLayout>